model Deck {
  id         String     @id @default(uuid())
  title      String
  userId     String
  englishLvl EnglishLvl
  user       User       @relation(fields: [userId], references: [id])
  flashcards Json
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

enum EnglishLvl {
  A1
  A2
  B1
  B2
  C1
  C2
}

model Flashcard {
  id        String   @id @default(uuid())
  question  String
  answer    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Interest {
  id    String @id @default(uuid())
  users User[]
  name  String @unique
}

model User {
  id            String      @id @default(uuid())
  email         String      @unique
  password      String
  refreshToken  String?
  dailyComplete Boolean     @default(false)
  daysStreak    Int         @default(0)
  englishLvl    EnglishLvl?
  deck          Deck[]
  interests     Interest[]
  learnedWords  String[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
